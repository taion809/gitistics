<%= erb :'layouts/header' %>

<div class='container'>
    <h3>Register</h3>
    <hr />

    <form action='/register' method='post'>
        <div class='form-group'>
            <label for='fullname'>Name</label>
            <input name='fullname' type='text' class='form-control' placeholder='Enter your name.' />
        </div>
        <div class='form-group'>
            <label for='username'>Username</label>
            <input name='username' type='text' class='form-control' placeholder='Enter your email.' />
        </div>
        <div class='form-group'>
            <label for='password'>Password</label>
            <input name='password' type='password' class='form-control' placeholder='Enter your password' />
        </div>
        <div class='form-group'>
            <label for='confirm_password'>Confirm Password</label>
            <input name='confirm_password' type='password' class='form-control' placeholder='Enter your password... again.' />
        </div>
        <button type="submit" class="btn btn-primary">Register!</button>
        <a href='/' class='btn btn-link'>Cancel</a>
    </form>
</div>

<%= erb :'layouts/footer' %>